<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frameImage">
            <com.barberapp.barberuser.utils.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imgMember"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtMemberName"
                android:layout_toRightOf="@+id/frameImage"
                android:textSize="15sp"
                android:typeface="monospace"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/frameImage"
                android:layout_below="@+id/txtMemberName"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:typeface="monospace"
                android:id="@+id/txtMemberexpert"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkMember"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@drawable/check_box_cutome"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
    </LinearLayout>

</android.support.v7.widget.CardView>